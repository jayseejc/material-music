<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nav_header_image" />

    <include
        android:id="@+id/include"
        layout="@layout/media_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_nav_header" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_nav_header"
        android:layout_toLeftOf="@+id/include"
        android:layout_toStartOf="@+id/include"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_title"
        android:layout_toLeftOf="@+id/include"
        android:layout_toStartOf="@+id/include"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>